@model IEnumerable<aspnetmvc2_ska.Models.Product>

@{
    ViewBag.Title = "View Products";
}

<h2>@ViewBag.Title</h2>
<hr />

<div style="padding-bottom: 15px; text-align: right">
    <button class="btn btn-default" id="filter-button" data-toggle="modal" data-target="#filter-modal">Data Filter</button>
</div>

<table class="table table-striped table-bordered table-hover">
    <thread>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SupplierID)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.QuantityPerUnit)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UnitsOnOrder)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ReorderLevel)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Discontinued)
            </th>
        </tr>
    </thread>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.QuantityPerUnit)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.UnitsOnOrder)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.ReorderLevel)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Discontinued)
            </td>
        </tr>
    }
    </tbody>
</table>

@Html.Partial("DataFilter");

@section scripts{
    <script>
        $("#filter-button").on('click',
            function () {
                $('#filter-modal').appendTo("body");
            });
    </script>
}